<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_collapseMode="parallax"
        app:srcCompat="@drawable/longgss" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical">


    <TextView
        android:id="@+id/nameTickerMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#9A5C01"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:text="AAPL" />

    <TextView
        android:id="@+id/priceTickerMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_market_price"
        android:textColor="#9E5E01"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/priceChangeMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/nameCompanyMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="Company: "
        android:textColor="#B86E00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/owningMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="@string/owning"
        android:textColor="#B86E00"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="15sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/lotMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lot"
                android:textColor="#B86E00"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lotCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#B86E00"
                android:textSize="20sp" />

            <Button
                android:id="@+id/plusMore"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="50sp"
                android:background="#FFC107"
                android:text="@string/plus"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                app:backgroundTint="#FFC107" />

            <Button
                android:id="@+id/minusMore"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#FDE9AC"
                android:text="@string/minus"
                android:textAlignment="center"
                android:textColor="#B86E00"
                app:backgroundTint="#FBDF89" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buyMore"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:background="#FFC107"
        android:text="@string/buy"
        android:textSize="20sp"
        app:backgroundTint="#FFC107" />

    <Button
        android:id="@+id/sellMore"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="126dp"
        android:background="#FDE9AC"
        android:hapticFeedbackEnabled="true"
        android:text="@string/sell"
        android:textColor="#B86E00"
        android:textSize="20sp"
        app:backgroundTint="#FBDF89" />


</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
